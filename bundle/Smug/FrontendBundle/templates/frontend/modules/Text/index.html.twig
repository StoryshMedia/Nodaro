<article class="smug-simple-text {% if additionalClasses is defined %}{{ additionalClasses }}{% endif %}">
    {% if headline.value is not empty %}
        <h2 class="{{ headline.classes }}" {% if id is defined %} {{ adminConfig(_context, 'headline', id) }} {% endif %}>
            {{ headline.value }}
        </h2>
    {% endif %}
    <div class="{{ caption.classes }}" {% if id is defined %} {{ adminConfig(_context, 'caption', id) }} {% endif %}>
        {{ caption.value | raw }}
    </div>
</article>